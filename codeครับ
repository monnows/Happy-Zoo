#define BLYNK_PRINT Serial    // Comment this out to disable prints and save space
#include <ESP8266WiFi.h>
#include <BlynkSimpleEsp8266.h>
#include <Servo.h>
Servo servo;

char auth[] = "your token";
char ssid[] = "WIFI";
char pass[] = "password";
void setup() {
  Serial.begin(9600);
  servo.attach(5);
  servo.write(22);
  Blynk.begin(auth, ssid, pass);

}

BLYNK_WRITE(V1) {
  if (param.asInt() == 1) {
    servo.write(90);
    delay(100);
    servo.write(22);
    delay(100);
  }
  Blynk.notify("Neat feeding!!");
  if (param.asInt() == 2) {
    servo.write(90);
    delay(100);
    servo.write(22);
    delay(100);
    Blynk.notify("Neat feeding!!");
  }
}
void loop() {

  Blynk.run();
}
